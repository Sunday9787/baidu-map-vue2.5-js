{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "api": ["src/api/*"],
      "style": ["src/style/*"],
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "store/*": ["src/store/*"],
      "views/*": ["src/views/*"],
      "tools/*": ["src/tools/*"],
      "@types/*": ["src/@types/*"],
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
